@model Human_Resource_Management.ViewModel.EmployeeProjectViewModel

@{
    ViewData["Title"] = "Assigned Projects";
}

<div class="row">
    <div class="page-header">
        <h2>Employee Project(s)</h2>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @if (Model.Projects.Count == 0)
    {
        <h3> There are no Projects!!</h3>

    }
    else
    {
        <div class=" row form-horizontal">
            <br />
            <div class="text-danger text-left">
                @Html.DisplayText("Message")
            </div>


            <div class=form-group>
                <div class="control-label col-md-2">
                    @Html.Label("Projects")
                </div>
                <div class="col-md-6 .col-md-offset-4">

                    @for (int i = 0; i < Model.Projects.Count(); i++)
                    {
                        <div>
                            @Html.HiddenFor(x => x.Projects[i].Name)
                            @Html.HiddenFor(x => x.Projects[i]._PjtId)
                            @Html.DisplayFor(m => m.Projects[i].Name)
                            @Html.CheckBoxFor(m => m.Projects[i].isProjectSelected)
                        </div>
                    }
                </div>
            </div>

        </div>
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    }
}

@Html.ActionLink("Back To Employee(s) ", "RouteToEmployeeIndexController")


