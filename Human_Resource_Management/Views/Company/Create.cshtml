@model Human_Resource_Management.Models.Company

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="page-header">
        <h2>Company</h2>
    </div>
</div>
@using (Html.BeginForm())
{
<div class=" row form-horizontal">
    <br />
    @if (ViewBag.Message != null)
    {
        <div class=" form-group ">
            <div class="col-md-offset-2 col-md-6 .col-md-offset-4 alert alert-danger" role="alert">
                @Html.DisplayText("Message")
            </div>
        </div>
    }

    <div class=form-group>
    </div>
    <div class=form-group>
        @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6 .col-md-offset-4">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class=form-group>
        @Html.LabelFor(m => m.Registered_Date, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6 .col-md-offset-4">
            @Html.EditorFor(m => m.Registered_Date, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Registered_Date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class=form-group>
        @Html.LabelFor(m => m.Chief_Executive_Officer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6 .col-md-offset-4">
            @Html.EditorFor(m => m.Chief_Executive_Officer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Chief_Executive_Officer, "", new { @class = "text-danger" })
        </div>
    </div>

</div>
<div class="col-md-offset-2 col-md-10">
    <input type = "submit" value="Create" class="btn btn-default" />
</div>
}

<div class="row">
    <div style="padding-top:20px;" class="col-md-offset-2 col-md-10" >
        @Html.ActionLink("Back to Companies", "Index")
    </div>
</div>
