@model Human_Resource_Management.Models.Position

@{
    ViewData["Title"] = "Create Position";
}

<div class="row">
    <div class="page-header">
        <h2>Position</h2>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class=" row form-horizontal">
    <br />
    @if (ViewBag.Message != null)
    {
    <div class=" form-group ">
        <div class="col-md-offset-2 col-md-6 .col-md-offset-4 alert alert-danger" role="alert">
            @Html.DisplayText("Message")
        </div>
    </div>
    }

    <div class=form-group>
        @Html.LabelFor(m => m.Position_Type, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6 .col-md-offset-4">
            @Html.EditorFor(m => m.Position_Type, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Position_Type, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<div class="col-md-offset-2 col-md-10">
    <input type="submit" value="Create" class="btn btn-default" />
</div>
}

