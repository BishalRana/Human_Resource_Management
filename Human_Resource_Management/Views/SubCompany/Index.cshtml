@model Human_Resource_Management.ViewModel.SubCompanyViewModel

@{
    ViewBag.Title = "Sub Company Page";
}

<h1>@Html.DisplayText("CompanyName") sub companies</h1>

<div class="row">
    <div class="">
        <div class="nav navbar-nav navbar-left">
            <div class="navbar-header btn">
                @Html.ActionLink("Create", "Create", new { id = @Model.id })
            </div>
        </div>
    </div>
</div>





@if (Model.SubCompanies.Count == 0)
{
<h3>There are no sub companies!!</h3>
}
else
{
<div style="padding-top:10px;" class="row">
    <div class="col-xs-12 table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SubCompanies[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubCompanies[0].Chief_Executive_Officer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubCompanies[0].Registered_Date)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subCompany in Model.SubCompanies)
               {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => subCompany.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => subCompany.Chief_Executive_Officer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => subCompany.Registered_Date)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = subCompany.Id, compId = @Model.id })|
                        @Html.ActionLink("Details", "Details", new { id = subCompany.Id, compId = @Model.id })|
                        @Html.ActionLink("Delete", "Delete", new { id = subCompany.Id, compId = @Model.id })
                    </td>
                </tr>
               }
            </tbody>
        </table>
    </div>
</div>
}
