@model Human_Resource_Management.ViewModel.ProjectViewModel


@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="page-header">
        <h2>Update Project</h2>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="row form-horizontal">
    <br />
    @if (ViewBag.Message != null)
    {
    <div class=" form-group ">
        <div class="col-md-offset-2 col-md-6 .col-md-offset-4 alert alert-danger" role="alert">
            @Html.DisplayText("Message")
        </div>
    </div>
    }

    <div class=form-group>
        @Html.LabelFor(m => m.ProjectName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6 .col-md-offset-4">
            @Html.EditorFor(m => m.ProjectName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class=form-group>
        @Html.LabelFor(m => m.NameOfSubCompany, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6 .col-md-offset-4">
            @Html.DropDownListFor(model => model.SubCompanyId, ViewBag.SubCompanies as List<SelectListItem>
                     , "-Select Sub Company--", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SubCompanyId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</div>
}
<div class="row" style="padding-top:20px;">
    <div class="col-md-offset-2 col-md-10">
        @Html.ActionLink("Back to Project List", "Index")
    </div>
</div>