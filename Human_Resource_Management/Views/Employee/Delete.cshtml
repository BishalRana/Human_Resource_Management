@model Human_Resource_Management.Models.Employee

@{
    ViewData["Title"] = "Delete";
}
<div class="row">
    <div class="page-header">
        <h2>Delete</h2>
    </div>
</div>
<h3>Are you sure you want to delete employee?</h3>
<div class="row">
    @if (ViewBag.Message != null)
    {
    <div>
        <div class="col-md-offset-1 col-md-6 .col-md-offset-5 alert alert-danger" role="alert">
            @Html.DisplayText("Message")
        </div>
    </div>
    }
    <div class="col-sm-11">
        <dl class="dl-horizontal">
            <dt>
                Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                Position
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Positions.Position_Type)
            </dd>
            <dt>
                Sub Company Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SubCompany.Name)
            </dd>
            <dt>
                Salary
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Salary)
            </dd>
        </dl>
    </div>
</div>
@using (Html.BeginForm())
{
<div class="row">
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div class="row">
    <div class="col-sm-offset-2 col-sm-10" style="padding-top:10px;">
        @Html.ActionLink("Back to Employee(s)", "Index")
    </div>
</div>

